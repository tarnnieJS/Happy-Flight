<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/layoutItemShortVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="3"
                android:id="@+id/textViewBookingType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="ขาไป"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageViewAirlineLogo1"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:src="@drawable/airasia" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textViewOriginAirPort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="กรุงเทพฯ (DMK)"
                        android:textColor="@color/text_primary" />
                    <ImageView
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right" />
                    <TextView
                        android:id="@+id/textViewDestinationAirPort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="เชียงใหม่ (CNX)"
                        android:textColor="@color/text_primary" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textViewBookingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="อา. 10 ธ.ค. 2024"
                        android:textColor="@color/text_primary" />
                    <ImageView
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_bullet" />
                    <TextView
                        android:id="@+id/textViewBookingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="21:05 - 22:15"
                        android:textColor="@color/text_primary" />
                </LinearLayout>


            </LinearLayout>




        </LinearLayout>



    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBookingReviewDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/title_site_bar">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:text="เที่ยวบิน"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewCardBookingType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:text="ขาไป"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageViewBackgroundTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_airplane_go" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_grey"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewAirlineLogo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/airasia" />

                    <TextView
                        android:id="@+id/textViewOrigin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:text="กรุงเทพฯ"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/arrow_right" />

                    <TextView
                        android:id="@+id/textViewDestination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:text="เชียงใหม่"
                        android:textColor="@color/black" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">


                    <me.lab.happyflight.views.customviews.CustomLineView
                        android:id="@+id/customLineView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/endDashLine"
                        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
                        app:layout_constraintStart_toEndOf="@+id/linearLayout4"
                        app:layout_constraintTop_toTopOf="@+id/imageView2"
                        custom:viewA="@id/startDashLine"
                        custom:viewB="@id/endDashLine" />

                    <TextView
                        android:id="@+id/textViewTakeOffTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="21:05 "
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/textViewOrigin2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="กรุงเทพฯ"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/textViewTakeOfDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="10 ธ.ค."
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@+id/startDashLine"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewTakeOffTime" />

                    <ImageView
                        android:id="@+id/startDashLine"
                        android:layout_width="18dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@+id/imageView2"
                        app:layout_constraintStart_toStartOf="@+id/imageView2"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


                    <TextView
                        android:id="@+id/textViewAirportNameOrigin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="สนามบินดอนเมือง (DMK)"

                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@+id/textViewOrigin2"
                        app:layout_constraintTop_toBottomOf="@+id/textViewOrigin2" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/menu_icon"
                        app:layout_constraintBottom_toBottomOf="@+id/textViewTakeOffTime"
                        app:layout_constraintStart_toEndOf="@+id/textViewTakeOffTime"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/background_border_white_corner_16"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textViewAirportNameOrigin"
                        app:layout_constraintTop_toBottomOf="@+id/textViewAirportNameOrigin">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageViewAirlineLogo3"
                                android:layout_width="14dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/airasia" />

                            <TextView
                                android:id="@+id/textViewAirlineCode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:text="แอร์ เอเชีย DD140"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textViewAirPlaneCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="6dp"
                            android:text="Boeing 737-800"
                            android:textColor="@color/black"
                            app:drawableStartCompat="@drawable/airplane" />

                        <TextView
                            android:id="@+id/textViewTicketClass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="6dp"
                            android:text="Economy-Nok Lite"
                            android:textColor="@color/black"
                            app:drawableStartCompat="@drawable/booking_class" />

                        <TextView
                            android:id="@+id/textViewCarryOn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="6dp"
                            android:text="สัมภาระขึ้นเครื่อง 7 กก."
                            android:textColor="@color/black"
                            app:drawableStartCompat="@drawable/carry_on" />

                        <TextView
                            android:id="@+id/textViewWiFi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="6dp"
                            android:text="WiFi"
                            android:textColor="@color/black"
                            android:visibility="visible"
                            app:drawableStartCompat="@drawable/ic_wifi" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/textViewLandingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:text="21:05 "
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />


                    <TextView
                        android:id="@+id/textViewDestination2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:text="เชียงใหม่"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/location_solid"
                        app:layout_constraintBottom_toBottomOf="@+id/textViewLandingTime"
                        app:layout_constraintStart_toEndOf="@+id/textViewLandingTime"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

                    <ImageView
                        android:id="@+id/endDashLine"
                        android:layout_width="18dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        app:layout_constraintBottom_toTopOf="@+id/imageView3"
                        app:layout_constraintEnd_toEndOf="@+id/imageView3"
                        app:layout_constraintStart_toStartOf="@+id/imageView3" />

                    <TextView
                        android:id="@+id/textViewLandingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="10 ธ.ค."
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@+id/imageView3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewLandingTime" />

                    <TextView
                        android:id="@+id/textViewAirportNameDestination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="สนามบินเชียงใหม่ (CNX)"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        app:layout_constraintTop_toBottomOf="@+id/textViewDestination2" />


                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toTopOf="@+id/textViewLandingTime"
                        app:layout_constraintEnd_toEndOf="@+id/textViewTakeOfDate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewTakeOfDate">

                        <TextView
                            android:id="@+id/totalTime"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="1ชม.\n10 น."
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />


                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>